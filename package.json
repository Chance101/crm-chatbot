{
  "name": "crm-chatbot",
  "version": "1.0.0",
  "description": "CRM Chatbot Application with NLP capabilities",
  "main": "src/backend/server.js",
  "scripts": {
    "start": "node src/backend/server.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon src/backend/server.js",
    "dev:client": "cd src/frontend && npm start",
    "build": "cd src/frontend && npm run build",
    "setup": "npm install && cd src/frontend && npm install",
    "test": "jest",
    "test:unit": "jest --projects=unit",
    "test:integration": "jest --projects=integration",
    "test:frontend": "cd src/frontend && npm test",
    "test:all": "npm run test && npm run test:frontend",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "crm",
    "chatbot",
    "nlp",
    "pdf"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.8",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "natural": "^6.8.0",
    "pdfjs-dist": "^3.11.174",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "eslint": "^8.42.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "mongodb-memory-server": "^8.16.1",
    "mongoose": "^8.13.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4",
    "winston": "^3.8.2"
  }
}
