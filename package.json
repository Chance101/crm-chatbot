{
  "name": "crm-chatbot",
  "version": "1.0.0",
  "description": "CRM Chatbot Application with NLP capabilities",
  "main": "src/backend/server.js",
  "scripts": {
    "start": "node src/backend/server.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon src/backend/server.js",
    "dev:client": "cd src/frontend && npm start",
    "build": "cd src/frontend && npm run build",
    "setup": "npm install && cd src/frontend && npm install",
    "test": "jest"
  },
  "keywords": [
    "crm",
    "chatbot",
    "nlp",
    "pdf"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.8",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.3",
    "multer": "^1.4.5-lts.1",
    "natural": "^6.8.0",
    "pdfjs-dist": "^3.11.174",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
